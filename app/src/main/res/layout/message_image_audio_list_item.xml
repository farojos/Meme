<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding ="10dp"
    android:background="@drawable/rounded_borders"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:layout_width="210dp">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/size"
        android:layout_alignBaseline="@+id/msg_image_btn"
        android:layout_alignBottom="@+id/msg_image_btn"
        android:layout_alignRight="@+id/MessageListItem.Content"
        android:layout_alignEnd="@+id/MessageListItem.Content" />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/image_audio_item"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/msg_audio_pause"
            android:src="@drawable/ic_pause_light"
            app:riv_corner_radius="30dip"
            app:riv_border_width="0dip"
            app:riv_border_color="#333333"
            app:riv_mutate_background="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:riv_tile_mode="repeat"
            app:riv_oval="true"
            android:layout_weight="1" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/msg_audio_play"
            android:src="@drawable/ic_play_light"
            app:riv_corner_radius="30dip"
            app:riv_border_width="0dip"
            app:riv_border_color="#333333"
            app:riv_mutate_background="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:riv_tile_mode="repeat"
            app:riv_oval="true"
            android:layout_weight="2.81" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_height="26dp"
            android:id="@+id/msg_audio_stop"
            android:src="@drawable/stop"
            app:riv_corner_radius="30dip"
            app:riv_border_width="0dip"
            app:riv_border_color="#333333"
            app:riv_mutate_background="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:riv_tile_mode="repeat"
            app:riv_oval="true"
            android:layout_width="19dp"
            android:layout_weight="0.14" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginBottom="5dp"
        android:text="Author"
        android:id="@+id/MessageListItem.Author"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</LinearLayout>